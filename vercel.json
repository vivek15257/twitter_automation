{
  "version": 2,
  "builds": [
    {
      "src": "api/tweet.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/tweet",
      "dest": "/api/tweet.js"
    }
  ],
  "crons": [
    {
      "path": "/api/tweet",
      "schedule": "0 9 * * *"
    }
  ],
  "env": {
    "APP_KEY": "@twitter_app_key",
    "APP_SECRET": "@twitter_app_secret",
    "ACCESS_TOKEN": "@twitter_access_token",
    "ACCESS_SECRET": "@twitter_access_secret",
    "GROQ_API_KEY": "@groq_api_key",
    "NEWS_API_KEY": "@news_api_key"
  }
} 